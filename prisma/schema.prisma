generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filament {
  id           Int      @id @default(autoincrement())
  barcode      String[] @default([])   // Not unique because cases may share the same barcode
  brand        String
  material     String
  color        String
  diameter     Float
  weight_grams Int
  price        Float
  purchase_date DateTime
  stock_level  Int?     // Nullable in case tracking is optional
  notes        String?

  @@index([barcode]) // Indexing barcode for efficient lookup
}
