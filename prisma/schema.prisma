generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filament {
  id            Int      @id @default(autoincrement())
  brand         String
  material      String
  color         String
  diameter      Float
  weight_grams  Int
  price         Float
  purchase_date DateTime
  stock_level   Int?
  notes         String?
  barcode       String[] @default([])

  @@index([barcode])
}
